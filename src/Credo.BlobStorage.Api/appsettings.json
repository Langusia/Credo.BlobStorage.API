{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=BlobStorage;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Storage": {
    "RootPath": "/mnt/storage",
    "MaxUploadBytes": 1073741824,
    "UploadBufferSize": 65536,
    "FirstChunkSize": 65536,
    "AllowedExtensions": ["pdf", "doc", "docx", "xls", "xlsx", "txt", "csv", "jpg", "jpeg", "png", "gif", "zip", "xml", "json"],
    "InlineContentTypes": ["application/pdf", "image/jpeg", "image/png", "image/gif", "text/plain"],
    "DefaultBuckets": ["default"]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
